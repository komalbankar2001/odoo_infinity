<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Scheduler to Refresh OneDrive Token -->
    <record model="ir.cron" id="ir_cron_refresh_onedrive_token">
        <field name="name">Refresh OneDrive Token</field>
        <field name="interval_number">50</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="model_res_company"/>
        <field name="state">code</field>
        <field name="code">model.refresh_onedrive_token()</field>
        <field name="binding_model_id" ref="model_res_company"/>
    </record>

    <!-- Scheduler for Uploading Attachments to OneDrive & Downloading Attachments from OneDrive to Odoo -->
    <record model="ir.cron" id="ir_cron_sync_with_onedrive">
        <field name="name">Sync With OneDrive</field>
        <field name="interval_number">2</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
        <field name="model_id" ref="model_res_company"/>
        <field name="state">code</field>
        <field name="code">model.sync_with_onedrive()</field>
        <field name="binding_model_id" ref="model_res_company"/>
    </record>

</odoo>
