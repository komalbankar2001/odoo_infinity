<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_attachment_onedrive_form" model="ir.ui.view">
        <field name="name">ir.attachment.onedrive.form</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mimetype']" position="after">
                <field name="onedrive_id"/>
                <field name="onedrive_download_url" widget="url"/>
            </xpath>
        </field>
    </record>

</odoo>