<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_onedrive" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.onedrive</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <h2>OneDrive Configuration</h2>
                <div class="row mt16 o_settings_container" id="onedrive_settings">
                    <!-- Left Side Block -->
                    <div class="col-12 col-lg-6 o_setting_box" id="left_onedrive_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <!-- Button Groups -->
                            <div class="content-group">
                                <div class="row col-lg-6" attrs="{'invisible':[('state_onedrive','!=','draft')]}">
                                    <button type="object" name="login_onedeive" string="Login and Confirm"
                                            icon="fa-arrow-right" class="btn-link"/>
                                </div>
                                <div class="row col-lg-6" attrs="{'invisible':[('state_onedrive','!=','confirmed')]}">
                                    <button type="object" name="onedrive_refresh_token_meth" string="Refresh Token"
                                            icon="fa-arrow-right" class="btn-link"/>
                                </div>
                            </div>
                            <!-- Fields -->
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="state_onedrive" string="Config State" class="col-lg-3"/>
                                    <field name="state_onedrive" readonly="1"/>
                                </div>
                                <div class="row mt16">
                                    <label for="onedrive_auth_base_url" string="Authorization URL" class="col-lg-3"/>
                                    <field name="onedrive_auth_base_url"/>
                                </div>
                                <div class="row mt16">
                                    <label for="onedrive_client_secret" string="App Client Secret" class="col-lg-3"/>
                                    <field name="onedrive_client_secret"/>
                                </div>
                                <div class="row mt16">
                                    <label for="store_attachment_at" string="Store Attachment At" class="col-lg-3"/>
                                    <field name="store_attachment_at" widget="radio"/>
                                </div>
                                <!-- Hidden Fields -->
                                <div class="row mt16" invisible="1">
                                    <label for="onedrive_access_token" string="Access Token" class="col-lg-3"/>
                                    <field name="onedrive_access_token"/>
                                </div>
                                <div class="row mt16" invisible="1">
                                    <label for="onedrive_refresh_token" string="Refresh Token" class="col-lg-3"/>
                                    <field name="onedrive_refresh_token"/>
                                </div>
                                <div class="row mt16" invisible="1">
                                    <label for="onedrive_api_url" string="OneDrive URL" class="col-lg-3"/>
                                    <field name="onedrive_api_url"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Right Side Block -->
                    <div class="col-12 col-lg-6 o_setting_box" id="right_onedrive_settings">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <!-- Fields -->
                                <div class="row mt16">
                                    <label for="onedrive_client_id" string="App Client ID" class="col-lg-3"/>
                                    <field name="onedrive_client_id"/>
                                </div>
                                <div class="row mt16">
                                    <label for="onedrive_auth_token_url" string="Authorization Token URL"
                                           class="col-lg-3"/>
                                    <field name="onedrive_auth_token_url"/>
                                </div>
                                <div class="row mt16">
                                    <label for="onedrive_redirect_url" string="Redirect URL" class="col-lg-3"/>
                                    <field name="onedrive_redirect_url"/>
                                </div>
                                <div class="row mt16">
                                    <label for="onedrive_auth_code" string="Authorization Code" class="col-lg-3"/>
                                    <field name="onedrive_auth_code" readonly="1"/>
                                </div>
                            </div>
                            <!-- Button Groups -->
                            <div class="content-group" attrs="{'invisible':[('state_onedrive','!=','confirmed')]}">
                                <p class="mt-2 mb-2 ml-2 mr-2">
                                    <strong>INITIAL SYNC</strong>
                                </p>
                                <div class="row col-lg-6" attrs="{'invisible':[('state_onedrive','!=','confirmed')]}">
                                    <button type="object" name="upload_to_onedrive" string="Upload To Onedrive"
                                            icon="fa-arrow-right" class="btn-link"/>
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="row col-lg-6" attrs="{'invisible':[('state_onedrive','!=','confirmed')]}">
                                    <button type="object" name="download_from_onedrive" string="Download From OneDrive"
                                            icon="fa-arrow-right" class="btn-link ml16"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
